<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<LinearLayout

    android:id="@+id/currentImage"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/curImage1"
        android:src="@drawable/item_bug"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <ImageView
        android:id="@+id/curImage2"
        android:src="@drawable/item_a"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <ImageView
        android:id="@+id/curImage3"
        android:src="@drawable/item_q"
        android:layout_gravity="center"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
</LinearLayout>
    <LinearLayout

        android:id="@+id/nextImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/nextImage1"
            android:src="@drawable/item_bug"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/nextImage2"
            android:src="@drawable/item_a"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <ImageView
            android:id="@+id/nextImage3"
            android:src="@drawable/item_q"
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
    </LinearLayout>

</FrameLayout>